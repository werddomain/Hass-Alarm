@using Microsoft.AspNetCore.Identity;

@model Hass_Alarm.Areas.Admin.Models.Users.EditUserModel;
@{
    ViewData["Title"] = "EditAsync";
    var user = ViewData["User"] as IdentityUser;
}

<h1>Edit</h1>


<form asp-action="Edit">
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
    <input type="hidden" asp-for="UserId" />
    <div class="form-group">
        <label for="exampleInputEmail1">Email address</label>
        <input type="email" class="form-control" id="exampleInputEmail1" value="@user.Email" readonly>
        
    </div>
    <div class="form-group">
        <label for="exampleInputUserName1">Email address</label>
        <input type="text" class="form-control" id="exampleInputUserName1" value="@user.UserName" readonly>
        
    </div>
    @*
        <div class="form-group">
            <label for="exampleInputPassword1">Password</label>
            <input type="password" class="form-control" id="exampleInputPassword1" placeholder="Password">
        </div>*@
    <div class="form-check">
        <input type="checkbox" class="form-check-input" id="check-admin" asp-for="Admin">
        <label class="form-check-label" for="check-admin">Admin</label>
        <small class="form-text text-muted">Admin can change all setings</small>
    </div>
    <div class="form-check">
        <input type="checkbox" class="form-check-input" id="check-admin" asp-for="Manager">
        <label class="form-check-label" for="check-admin">Manager</label>
        <small class="form-text text-muted">Manager can change all setting but not users right</small>

    </div>
    <div class="form-check">
        <input type="checkbox" class="form-check-input" id="check-admin" asp-for="Member">
        <label class="form-check-label" for="check-admin">Member</label>
        <small class="form-text text-muted">Member can only change his pin code</small>
    </div>
    <button type="submit" class="btn btn-primary">Submit</button>
</form>